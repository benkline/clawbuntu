# Google Cloud credentials
GOOGLE_APPLICATION_CREDENTIALS=/home/respeaker/voice-assistant/gcp-credentials.json

# Anthropic API key
ANTHROPIC_API_KEY=sk-ant-...

# Audio device indices
# Find with: python3 -c "import pyaudio; p=pyaudio.PyAudio(); [print(i, p.get_device_info_by_index(i)) for i in range(p.get_device_count())]"
AUDIO_INPUT_DEVICE_INDEX=0
AUDIO_OUTPUT_DEVICE_INDEX=0

# Trigger mode: 'button' or 'keyboard'
TRIGGER_MODE=keyboard

# GPIO pin number for button (BCM numbering), used when TRIGGER_MODE=button
BUTTON_GPIO_PIN=17

# Claude model selection
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Conversation memory: max number of turns to retain
MAX_HISTORY_TURNS=10

# Audio capture parameters
VAD_AGGRESSIVENESS=2
SILENCE_FRAMES_THRESHOLD=33

# STT parameters
STT_LANGUAGE_CODE=en-US
STT_MODEL=latest_long

# TTS parameters
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-J
TTS_SPEAKING_RATE=1.0
TTS_PITCH=0.0

# Claude parameters
CLAUDE_MAX_TOKENS=512

# System prompt for Claude
SYSTEM_PROMPT=You are a helpful voice assistant running on a ReSpeaker device. Keep your responses concise and conversational â€” spoken aloud, so avoid markdown, bullet points, or special characters. Respond in plain, natural language as if speaking to someone in the room.
